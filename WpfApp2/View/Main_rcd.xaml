      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.View"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="830"
      Title="Main_rcd">

    <Grid>
        <Button Content="" HorizontalAlignment="Left" Height="80" Margin="670,0,0,0" VerticalAlignment="Top" Width="150" BorderBrush="Transparent" Click="Button_Click">
