        <Button HorizontalAlignment="Left" Height="84" Margin="565,260,0,0" VerticalAlignment="Top" Width="216" Click="Button_Click_2" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/이미지/m_rcd_btn2.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Height="84" Margin="565,371,0,0" VerticalAlignment="Top" Width="216" Click="Button_Click_1" BorderBrush="{x:Null}">
