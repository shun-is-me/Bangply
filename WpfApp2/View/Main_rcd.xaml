        <TextBox x:Name="idsession" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.383,-0.033" FontSize="36" FontWeight="Bold" Height="40" Width="116" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF9541C5" />
